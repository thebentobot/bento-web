---
import { rankStyles } from "./PatreonUser.astro";

interface Props {
    rank: number;
}

const { rank } = Astro.props;

const style = rankStyles[rank];
---

<div>
    <li
        class={`transition duration-300 ease-in-out dark:bg-zinc-900 bg-zinc-100 flex flex-wrap items-center ${style.width} min-w-[95%] sm:min-w-0 my-4 px-4 rounded-lg shadow-xs overflow-hidden`}
    >
        <div class="shrink-0 truncate text-left py-5 mx-auto animate-pulse">
            <div
                class="rounded-full inline-block mx-4 dark:bg-zinc-700 bg-zinc-300 animate-pulse"
                style={{
                    width:
                        typeof style.avatarWidth === "number"
                            ? `${style.avatarWidth}px`
                            : `clamp(${style.avatarWidth.mobile}px, 5vw + ${style.avatarWidth.mobile * 0.5}px, ${style.avatarWidth.desktop}px)`,
                    height:
                        typeof style.avatarHeight === "number"
                            ? `${style.avatarHeight}px`
                            : `clamp(${style.avatarHeight.mobile}px, 5vw + ${style.avatarHeight.mobile * 0.5}px, ${style.avatarHeight.desktop}px)`,
                }}
            >
            </div>
        </div>
        <div class="grow p-4 w-full md:w-auto overflow-hidden animate-pulse">
            <div
                class={`dark:bg-zinc-700 bg-zinc-300 h-6 ${style.textSize} rounded-md text-center lg:text-left w-full`}
            >
            </div>
        </div>
    </li>
</div>
