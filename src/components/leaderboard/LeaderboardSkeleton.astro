---
interface Props {
    serverId: string | undefined;
}

const { serverId } = Astro.props;
---

<h1
    class="mt-2 text-3xl leading-8 font-extrabold tracking-tight dark:text-white text-black sm:text-4xl text-center"
>
    Leaderboard for {serverId ? `Server ID ${serverId}` : "Bento"}
</h1>
{
    serverId && (
        <div class="animate-pulse bg-gray-900/50 mx-auto my-auto p-2 mt-8 w-64 rounded-sm shadow-lg">
            <div class="dark:bg-zinc-700 bg-zinc-300 w-64 h-64 rounded-sm mx-auto" />
        </div>
    )
}
<div class="max-w-(--breakpoint-2xl) mx-auto px-3 pt-2">
    <ul class="relative w-full">
        {
            Array.from({ length: 10 }).map(() => (
                <div class="shadow-lg">
                    <li class="animate-pulse transition duration-300 ease-in-out dark:bg-zinc-900 bg-zinc-100 flex items-center w-full min-w-[95%] sm:min-w-0 my-4 p-2 px-4 rounded-lg group hover:bg-zinc-200 dark:hover:bg-zinc-800 shadow-xs overflow-hidden">
                        <div class="shrink-0 w-72 truncate dark:text-zinc-700 text-zinc-100 text-left flex items-center">
                            <div class="inline-block dark:bg-zinc-800 bg-zinc-200 px-2 py-1 rounded-md w-6 h-7 shrink-0" />
                            <div class="w-16 h-16 rounded-full inline-block mx-4 bg-gray-400 shrink-0" />
                            <div class="h-4 w-24 bg-gray-400 rounded-sm" />
                        </div>

                        <div class="grow p-4 w-full md:w-auto overflow-hidden">
                            <div class="transition duration-1000 ease-in-out dark:text-white text-black text-left opacity-0 group-hover:opacity-100 overflow-hidden" />
                            <div class="transition duration-300 ease-in-out mt-1 mb-1 w-full h-1 dark:bg-zinc-700 dark:group-hover:bg-zinc-500 bg-zinc-300 group-hover:bg-zinc-400 rounded-sm overflow-hidden">
                                <div
                                    class="progress-done"
                                    style={{
                                        opacity: 0.75,
                                        width: `0%`,
                                    }}
                                />
                            </div>
                        </div>

                        <div class="dark:text-white text-black p-4 h-20 flex w-full md:w-auto items-center justify-between">
                            <div>
                                <div class="h-4 w-12 bg-gray-400 rounded-sm mb-2" />
                                <div class="h-6 w-8 bg-gray-400 rounded-sm" />
                            </div>
                        </div>
                    </li>
                </div>
            ))
        }
    </ul>
</div>
