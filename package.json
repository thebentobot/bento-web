{
    "name": "bento-web",
    "author": {
        "name": "Christian Krogh Nielsen",
        "email": "christian@chrkn.dev",
        "url": "https://chrkn.dev"
    },
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "preview": "astro build && wrangler dev --remote",
        "astro": "astro",
        "deploy": "astro build && wrangler deploy",
        "lint": "eslint . --ignore-pattern worker-configuration.d.ts",
        "lint:fix": "eslint . --fix --ignore-pattern worker-configuration.d.ts",
        "format": "prettier --write .",
        "cf-typegen": "wrangler types",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "CLOUDFLARE_ACCOUNT_ID=$CLOUDFLARE_ACCOUNT_ID CLOUDFLARE_API_TOKEN=$CLOUDFLARE_D1_TOKEN wrangler d1 migrations apply bento-web-db --remote",
        "db:execute": "CLOUDFLARE_ACCOUNT_ID=$CLOUDFLARE_ACCOUNT_ID CLOUDFLARE_API_TOKEN=$CLOUDFLARE_D1_TOKEN wrangler d1 execute bento-web-db --remote",
        "db:setup": "npm run db:generate && npm run db:migrate",
        "db:migrate:local": "wrangler d1 migrations apply bento-web-db --local",
        "db:execute:local": "wrangler d1 execute bento-web-db --local",
        "db:setup:local": "npm run db:generate && npm run db:migrate:local",
        "deploy:staging": "astro build && wrangler deploy --env staging",
        "deploy:production": "astro build && wrangler deploy --env production",
        "db:migrate:staging": "wrangler d1 migrations apply bento-web-db-staging --remote --env staging",
        "db:execute:staging": "wrangler d1 execute bento-web-db-staging --remote --env staging",
        "prepare": "husky"
    },
    "devDependencies": {
        "@astrojs/cloudflare": "^12.6.12",
        "@astrojs/sitemap": "^3.7.0",
        "@astrojs/svelte": "^7.2.5",
        "@commitlint/cli": "^20.4.2",
        "@commitlint/config-conventional": "^20.4.2",
        "@eslint/js": "^10.0.1",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.2.1",
        "@types/luxon": "^3.7.1",
        "@types/node": "^25.3.0",
        "@typescript-eslint/parser": "^8.56.1",
        "astro": "^5.18.0",
        "drizzle-kit": "^0.31.9",
        "eslint": "^10.0.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-astro": "^1.6.0",
        "eslint-plugin-svelte": "^3.15.0",
        "globals": "^17.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-svelte": "^3.5.0",
        "rollup-plugin-visualizer": "^7.0.0",
        "svelte": "^5.53.3",
        "tailwindcss": "^4.2.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.1",
        "wrangler": "^4.68.1"
    },
    "dependencies": {
        "@libsql/client": "^0.17.0",
        "@skyra/discord-components-core": "4.0.2",
        "astro-font": "^1.1.0",
        "astro-icon": "^1.1.5",
        "astro-loading-indicator": "^0.7.1",
        "better-auth": "^1.4.19",
        "dotenv": "^17.3.1",
        "drizzle-orm": "^0.41.0",
        "luxon": "^3.5.0",
        "mode-watcher": "^1.1.0"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.astro": [
            "eslint --fix",
            "prettier --write --parser astro"
        ],
        "*.svelte": [
            "eslint --fix",
            "prettier --write --parser svelte"
        ],
        "*.{js,cjs,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ],
        "*.css": [
            "prettier --write"
        ]
    }
}
