{
    "name": "bento-web",
    "author": {
        "name": "Christian Krogh Nielsen",
        "email": "christian@chrkn.dev",
        "url": "https://chrkn.dev"
    },
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "preview": "astro build && wrangler dev --remote",
        "astro": "astro",
        "deploy": "astro build && wrangler deploy",
        "lint": "eslint . --ignore-pattern worker-configuration.d.ts",
        "lint:fix": "eslint . --fix --ignore-pattern worker-configuration.d.ts",
        "format": "prettier --write .",
        "cf-typegen": "wrangler types",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "CLOUDFLARE_ACCOUNT_ID=$CLOUDFLARE_ACCOUNT_ID CLOUDFLARE_API_TOKEN=$CLOUDFLARE_D1_TOKEN wrangler d1 migrations apply bento-web-db --remote",
        "db:execute": "CLOUDFLARE_ACCOUNT_ID=$CLOUDFLARE_ACCOUNT_ID CLOUDFLARE_API_TOKEN=$CLOUDFLARE_D1_TOKEN wrangler d1 execute bento-web-db --remote",
        "db:setup": "npm run db:generate && npm run db:migrate",
        "db:migrate:local": "wrangler d1 migrations apply bento-web-db --local",
        "db:execute:local": "wrangler d1 execute bento-web-db --local",
        "db:setup:local": "npm run db:generate && npm run db:migrate:local"
    },
    "devDependencies": {
        "@astrojs/cloudflare": "^12.6.8",
        "@astrojs/sitemap": "^3.5.1",
        "@astrojs/svelte": "^7.2.0",
        "@eslint/compat": "^1.3.2",
        "@eslint/js": "^9.34.0",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.12",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.0",
        "astro": "^5.14.0",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-astro": "^1.3.1",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-svelte": "^3.11.0",
        "globals": "^16.4.0",
        "prettier": "^3.6.2",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-svelte": "^3.4.0",
        "rollup-plugin-visualizer": "^6.0.3",
        "svelte": "^5.39.6",
        "tailwindcss": "^4.1.12",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.0",
        "wrangler": "^4.41.0"
    },
    "dependencies": {
        "@libsql/client": "^0.15.14",
        "@skyra/discord-components-core": "4.0.2",
        "astro-font": "^1.1.0",
        "astro-icon": "^1.1.5",
        "astro-loading-indicator": "^0.7.0",
        "better-auth": "^1.3.18",
        "dotenv": "^17.2.2",
        "drizzle-orm": "^0.44.5",
        "mode-watcher": "^1.1.0"
    }
}
